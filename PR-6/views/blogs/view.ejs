    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Single View</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->

    <div class="row">
    <div class="col-xl-8 col-lg-9 mx-auto">

        <div class="card shadow-sm">

            <div class="card-body px-4 py-4">

                <!-- Title -->
                <h4 class="font-weight-bold text-dark mb-4">
                    <%= blog.Title %>
                </h4>

                <div class="row align-items-center">

                    <!-- Image -->
                    <div class="col-md-3 text-center">
                        <% if (blog.BlogImage) { %>
                            <img src="<%= blog.BlogImage %>"
                                 class="img-fluid rounded border mb-3 mb-md-0"
                                 width="130">
                        <% } else { %>
                            <span class="text-muted small">No Image</span>
                        <% } %>
                    </div>

                    <!-- Content -->
                    <div class="col-md-9">

                        <div class="row mb-3">

                            <div class="col-md-4">
                                <small class="text-muted d-block">Category</small>
                                <strong><%= blog.Category %></strong>
                            </div>

                            <div class="col-md-4">
                                <small class="text-muted d-block">Author</small>
                                <strong><%= blog.Name %></strong>
                            </div>

                            <div class="col-md-4">
                                <small class="text-muted d-block">Status</small>
                                <span class="badge badge-success px-3">
                                    <%= blog.Status %>
                                </span>
                            </div>

                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <small class="text-muted d-block">Date</small>
                                <strong><%= blog.Date %></strong>
                            </div>
                        </div>

                        <div>
                            <small class="text-muted d-block">Description</small>
                            <p class="mb-0 text-dark">
                                <%= blog.Description %>
                            </p>
                        </div>

                    </div>

                </div>

            </div>

            <!-- Footer -->
            <div class="card-footer bg-white text-right py-2">
                <a href="/blogs/view-blog" type="button" class="btn btn-light btn-sm">Back</a>
            </div>

        </div>

    </div>
</div>




